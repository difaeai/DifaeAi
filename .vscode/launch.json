{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Dev (start and open homepage)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "Local:\\s*(http://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "env": {
        "BROWSER": "none"
      }
      ,
      "preLaunchTask": "npm: ci"
    }
  ]
}
